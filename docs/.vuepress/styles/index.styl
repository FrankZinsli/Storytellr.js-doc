.theorem
  margin 1rem 0
  padding .1rem 1.5rem
  border-radius 0.4rem
  background-color #f0f4f8
  .title
    font-weight bold

.custom-block
  &.right
    color transparentify($textColor, 0.4)
    font-size 0.9rem
    text-align right

img[alt='alt text']
    width: 200px

.search-box
  order: 1
  margin-right: 0
  margin-left: 1rem

  .suggestions
    left: auto !important
    right: 0 !important

.social-share
  display grid
  justify-content center


#teile-diese-bibliothek
  text-align center


video
  width: 100%
  height: 100%

h4
  font-size 1.35rem !important
  font-weight 600
  line-height 1.25
  margin-top -3.1rem
  padding-top 4.6rem
  margin-bottom 0

button
  background-color: $accentColor
  border: none
  color: white !important
  padding: 8px 16px
  text-align: center
  text-decoration: none
  display: inline-block
  font-size: 16px
  opacity: 0.8;
  transition: 0.2s;

.button-a
  color white !important
  text-decoration none !important

button:hover
  opacity 1
  cursor pointer

.navbar .logo
  width auto
  min-width unset !important

.required-star
  color red
  font-size 1.7rem
  line-height 1rem
